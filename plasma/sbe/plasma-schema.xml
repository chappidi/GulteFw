<?xml version="1.0" encoding="utf-8"?>
<messageSchema xmlns="http://fixprotocol.io/2016/sbe"
                   id="1" version="121"
                   semanticVersion="1.0"
                   description="plasma message interface"
                   byteOrder="littleEndian" package="plasma.client">
  <types>
    <composite name="messageHeader" description="sbe message header">
      <type name="blockLength" primitiveType="uint16"/>
      <type name="templateId" primitiveType="uint16"/>
      <type name="schemaId" primitiveType="uint16"/>
      <type name="version" primitiveType="uint16"/>
    </composite>
    <composite name="varStringEncoding" description="variable length string utf-8 charset">
      <type name="length" primitiveType="uint16" />
      <type name="varData" length="0" primitiveType="uint8" characterEncoding="UTF-8"/>
    </composite>
    <enum name="Side" encodingType="uint8">
      <validValue name="BUY">1</validValue>
      <validValue name="SELL">2</validValue>
    </enum>
    <enum name="OrdStatus" encodingType="uint8">
      <validValue name="New">1</validValue>
      <validValue name="Partially_Filled">2</validValue>
      <validValue name="Filled">3</validValue>
      <validValue name="Done_For_Day">4</validValue>
      <validValue name="Canceled">5</validValue>
      <validValue name="Replaced">6</validValue>
      <validValue name="Pending_Cancel">7</validValue>
      <validValue name="Stopped">8</validValue>
      <validValue name="Rejected">9</validValue>
      <validValue name="Suspended">10</validValue>
      <validValue name="Pending_New">11</validValue>
      <validValue name="Pending_Replace">12</validValue>
      <validValue name="NA">13</validValue>
    </enum>
   </types>

  <message name="NewOrderSingle" id="1" description="New Order Request">
    <field name="parent"  id="1" type="uint32" description="plasma parent order id"/>
    <field name="clOrdId" id="2" type="uint32" description="one byte source id, three byte seq id"/>
    <field name="symbol"  id="3" type="uint32" description="security to be traded"/>
    <field name="side"    id="4" type="Side" description="side of market"/>
    <field name="qty"     id="5" type="double" description="quantity to trade"/>
    <field name="dest"    id="6" type="uint8" description="target id"/>
  </message>
  <message name="OrderStatusRequest" id="2" description="Order Status Request">
    <field name="clOrdId" id="1" type="uint32" description="one byte source id, three byte seq id"/>
    <field name="orderId" id="2" type="uint32" description="plasma order id"/>
    <field name="symbol"  id="3" type="uint32" description="security to be traded"/>
    <field name="side"    id="4" type="Side" description="side of market"/>
    <field name="qty"     id="5" type="double" description="quantity to trade"/>
  </message>
  <message name="OrderCancelRequest" id="3" description="Order Cancel Request">
    <field name="clOrdId"     id="1" type="uint32" description="one byte source id, three byte seq id"/>
    <field name="origClOrdId" id="2" type="uint32" description="one byte source id, three byte seq id"/>
    <field name="orderId"     id="3" type="uint32" description="plasma order id"/>
    <field name="symbol"      id="4" type="uint32" description="security to be traded"/>
    <field name="side"        id="5" type="Side" description="side of market"/>
    <field name="qty"         id="6" type="double" description="quantity to trade"/>
  </message>
  <message name="OrderReplaceRequest" id="4" description="Order Replace Request">
    <field name="clOrdId"     id="1" type="uint32" description="one byte source id, three byte seq id"/>
    <field name="origClOrdId" id="2" type="uint32" description="one byte source id, three byte seq id"/>
    <field name="orderId"     id="3" type="uint32" description="plasma order id"/>
    <field name="symbol"      id="4" type="uint32" description="security to be traded"/>
    <field name="side"        id="5" type="Side" description="side of market"/>
    <field name="qty"         id="6" type="double" description="quantity to trade"/>
  </message>
  <message name="OrderCancelReject" id="5" description="Order Cancel Reject">
    <field name="clOrdId"     id="1" type="uint32" description="one byte source id, three byte seq id"/>
    <field name="origClOrdId" id="2" type="uint32" description="one byte source id, three byte seq id"/>
    <field name="orderId"     id="3" type="uint32" description="plasma order id"/>
    <field name="symbol"      id="4" type="uint32" description="security to be traded"/>
    <field name="side"        id="5" type="Side" description="side of market"/>
    <field name="qty"         id="6" type="double" description="quantity to trade"/>

  </message>
  <message name="NonFillReport" id="6" description="Non Fill Report">
    <field name="clOrdId"     id="1" type="uint32" description="one byte source id, three byte seq id"/>
    <field name="origClOrdId" id="2" type="uint32" description="one byte source id, three byte seq id"/>
    <field name="orderId"     id="3" type="uint32" description="plasma order id"/>
    <field name="symbol"      id="4" type="uint32" description="security to be traded"/>
    <field name="side"        id="5" type="Side" description="side of market"/>
    <field name="qty"         id="6" type="double" description="quantity to trade"/>
    
    <field name="cumQty"      id="7" type="double"  description="cumulative quantity executed"/>
    <field name="leavesQty"   id="8" type="double"  description="leaves quantity"/>
    <field name="avgPx"       id="9" type="double"  description="execution average price"/>
  </message>
  <message name="FillReport" id="7" description="Fill Report">
    <field name="orderId"     id="1" type="uint32"  description="plasma order id"/>
    <field name="clOrdId"     id="2" type="uint32"  description="one byte source id, three byte seq id"/>
    <field name="execId"      id="3" type="uint32"  description="one byte source id, three byte seq id"/>
    <field name="symbol"      id="4" type="uint32"  description="security to be traded"/>
    <field name="side"        id="5" type="Side"    description="side of market"/>
    <field name="qty"         id="6" type="double"  description="quantity to trade"/>
    
    <field name="cumQty"      id="7" type="double"  description="cumulative quantity executed"/>
    <field name="leavesQty"   id="8" type="double"  description="leaves quantity"/>
    <field name="avgPx"       id="9" type="double"  description="execution average price"/>
    <field name="lastQty"     id="10" type="double"  description="last executed quantity"/>
    <field name="lastPx"      id="11" type="double"  description="last executed price"/>

  </message>
  <message name="DontKnowTrade" id="8" description="Dont Know Execution Report">
    <field name="orderId"     id="1" type="uint32"  description="plasma order id"/>
    <field name="execId"      id="2" type="uint32"  description="one byte source id, three byte seq id"/>
    <field name="symbol"      id="3" type="uint32"  description="security to be traded"/>
    <field name="side"        id="4" type="Side"    description="side of market"/>
    <field name="qty"         id="5" type="double"  description="quantity to trade"/>
    <field name="reason"      id="6" type="uint8"   description="reason code"/>
  </message>
</messageSchema>